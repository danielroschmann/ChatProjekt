doctype HTML 
html 
    head 
        title #{user.navn}
        link(rel="stylesheet", href="/css/menubarComponent.css")
        link(rel="stylesheet", href="/css/userDetailView.css")
        link(rel="icon", href="/logo/chat.svg")
    body 
        include includes/menubarComponent
        if (!profileView)
            a(class="tilbage", href="/users") ⬅ Gå tilbage
        else 
            a(class="tilbage", href="/chats") ⬅ Gå tilbage
        .container
            h1 Navn: #{user.navn} 
            h2 Oprettelsesdato: #{user.dato} 
            - var rolle
            if (user.niveau === 1)
                - rolle = 'Bruger'
            if (user.niveau === 2)
                - rolle = 'Moderator'
            if (user.niveau === 3) 
                - rolle = 'Administrator'
            .profile-info
                h2 ID: #{user.id}
            .role-info 
                h2(class=rolle) #{rolle}
            .profileButtons
                if (!profileView)
                    a(class="viewMessages", href=`/users/${user.id}/messages`) Se beskeder
                else
                    a.changePassword(href=`/profile/password`) Skift adgangskode