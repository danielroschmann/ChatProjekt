doctype HTML 
html 
    head 
        title Brugere 
        link(rel="stylesheet", href="/css/menubarComponent.css")
        link(rel="stylesheet", href="/css/usersView.css")
        link(rel="icon", href="/logo/chat.svg")
    body 
        include includes/menubarComponent
        h1 Brugere
        each user in users 
            - var auth 
            if (user.niveau === 1)
                - auth = "user"
            if (user.niveau === 2)
                - auth = "Moderator"
            if (user.niveau === 3) 
                - auth = "Administrator"
            div(class="user-item") 
                a(href=`/users/${user.id}`, style="display: block; width: 100%; height: 100%") #{user.navn} (#{auth})